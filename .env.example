# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Exemplo (preencha com seus valores locais)
DATABASE_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:5432/<DB_NAME>?sslmode=disable
PGDATABASE=<DB_NAME>
PGHOST=<DB_HOST>
PGPORT=5432
PGUSER=<DB_USER>
PGPASSWORD=<DB_PASSWORD>

# ==============================================
# AI SERVICES CONFIGURATION
# ==============================================
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
WHISPER_MODEL=base

# ==============================================
# LANGSMITH CONFIGURATION (Observability)
# ==============================================
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=famagpt-system

# ==============================================
# EVOLUTION API CONFIGURATION (WhatsApp)
# ==============================================
EVOLUTION_API_URL=https://your-evolution-api-url.com
EVOLUTION_API_KEY=your_evolution_api_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# CACHE CONFIGURATION
# ==============================================
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=86400     # 24 hours

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE_MB=50
ALLOWED_AUDIO_FORMATS=mp3,wav,ogg,m4a
TEMP_DIR=/tmp/famagpt

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
DEFAULT_CITY=Uberl√¢ndia
DEFAULT_STATE=MG
PROPERTY_SEARCH_RADIUS_KM=50
